{
  "manifest_version": 3,
  "name": "Nepali Language Toolkit",
  "version": "0.1.0",
  "description": "Select Nepali text on any page to see analysis, corrections, and dictionary definitions.",
  "permissions": ["storage", "activeTab", "sidePanel"],
  "host_permissions": ["https://sabdasakha.com/*"],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "side_panel": {
    "default_path": "src/popup.html"
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "varnavinyas@varnavinyas.org",
      "strict_min_version": "121.0"
    }
  }
}
